@model CodedHomes.Web.Models.LocalPasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row-fluid">
        <div class="span2">@Html.LabelFor(m => m.OldPassword)</div>
        <div class="span4">@Html.PasswordFor(m => m.OldPassword)</div>
    </div>
    <div class="row-fluid">
        <div class="span2">@Html.LabelFor(m => m.NewPassword)</div>
        <div class="span4">@Html.PasswordFor(m => m.NewPassword)</div>
    </div>
    <div class="row-fluid">
        <div class="span2">@Html.LabelFor(m => m.ConfirmPassword)</div>
        <div class="span4">@Html.PasswordFor(m => m.ConfirmPassword)</div>
    </div>
    <div class="row-fluid">
        <div class="span2">&nbsp;</div>
        <div class="span4"><input type="submit" value="Change password" /></div>
    </div>
}
